  <script>
    let k = document.querySelector('.xbox');
    for (var i = 0; i < 99; i++) {
      let z = document.createElement('div');
      var r = Math.round(Math.random() * 100);
      z.className = 'z';
      z.style.top = r + '%';
      z.style.left = r + '%';
      z.style.transform = `scale(${Math.round(Math.random()*2)})`;
      k.insertAdjacentElement('afterbegin', z)
    }

    let z = document.querySelectorAll('.z');
    
    z.forEach(v => {
      let top = Math.round(Math.random() * 100 - 100);
      let i = top;
      setInterval(() => {
        i++;
        if (i > 100) {
          i = top
        }
        v.style.top = i + '%'
      }, Math.round(Math.random() * 120 + 100))
    })
  </script>
